# Date fields
DATE_FIELD_DEFAULT=creationDate
DATE_FIELD_OPTIONS=creationDate,plannedShipmentDate,plannedDeliveryDate,shipmentDate,deliveryDate

# Server
HOST=0.0.0.0
PORT=8899
DEBUG=true
